# Application
APP_NAME="WorkHub.ua"
APP_VERSION="1.0.0"
API_V1_STR="/api/v1"
DEBUG=false
ENVIRONMENT=production

# Server (Railway provides PORT automatically)
# PORT=8000

# Database (Railway provides DATABASE_URL automatically when you add PostgreSQL)
# DATABASE_URL=postgresql://user:password@host:port/database

# Redis (Railway provides REDIS_URL automatically when you add Redis)
# REDIS_URL=redis://default:password@host:port

# Security - REQUIRED
SECRET_KEY=your-secret-key-here-must-be-changed-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Monobank API - REQUIRED
MONOBANK_TOKEN=your-monobank-token-here

# Optional - Monobank Webhook (use your Railway app URL)
MONOBANK_WEBHOOK_URL=https://your-app.railway.app/api/v1/payments/webhook/monobank
MONOBANK_MERCHANT_ID=your-merchant-id

# Diia API (optional)
DIIA_CLIENT_ID=
DIIA_CLIENT_SECRET=
DIIA_REDIRECT_URI=

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=
AWS_S3_REGION=eu-central-1

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@workhub.ua

# Sentry (optional but recommended for production)
SENTRY_DSN=

# Frontend
FRONTEND_URL=https://workhub.ua

# CORS (comma-separated list of allowed origins or * for all)
CORS_ORIGINS=https://workhub.ua,https://www.workhub.ua