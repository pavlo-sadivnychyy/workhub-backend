# Application
APP_NAME="WorkHub.ua"
APP_VERSION="1.0.0"
API_V1_STR="/api/v1"
DEBUG=false
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/workhub

# Redis
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Monobank API
MONOBANK_TOKEN=your-monobank-token
MONOBANK_WEBHOOK_URL=https://api.workhub.ua/api/v1/payments/webhook/monobank
MONOBANK_MERCHANT_ID=your-merchant-id

# Diia API (optional)
DIIA_CLIENT_ID=
DIIA_CLIENT_SECRET=
DIIA_REDIRECT_URI=

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=
AWS_S3_REGION=eu-central-1

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@workhub.ua

# Sentry (optional)
SENTRY_DSN=

# Frontend
FRONTEND_URL=https://workhub.ua